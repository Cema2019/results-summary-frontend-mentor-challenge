{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",  
    "strict": true,  
    "moduleResolution": "node",  
    "target": "esnext",  
    "module": "esnext",  
    "lib": ["dom", "esnext"],  
    "skipLibCheck": true  
  },
  "include": ["src/**/*", "data/**/*.json"],  
  "exclude": ["node_modules"]
}
